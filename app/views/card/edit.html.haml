.cardeditPgae
  .container
    = form_with model: @card, url: { action: :update }, html: { class: 'cardeditForm' }, local: true do |f|
      - if @card.errors.any?
        %p.text-danger タイトルは1～255文字以内で入力してください
      .cardeditForm_title
        = f.label :title,"あなたが継続したいこと "
        = f.text_field :title, autofocus: true, class: "form-control", placeholder: "例：スクワッド"
        .cardnewForm_title.cardformWhere
          = f.label :where, "どの場所でやるか"
          = f.text_field :where, autofocus: true, class: "form-control", placeholder: "例：家の中"
        .cardnewForm_memo
          = f.label :memo,"目標達成の条件"
          = f.text_field :memo, autofocus: true, class: "form-control", placeholder: "例：15回できたら"
      .text-center= f.submit "更新する", class: "submitBtn"
